<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinaunicom.common.mapper.RegionProvinceApplMapper">

    <select id="getProvinceByRegionId" resultType="com.chinaunicom.common.entity.SysArea">
        SELECT sa.*
        FROM region_province_appl rpa
        INNER JOIN sys_area sa ON rpa.province_id = sa.id
        WHERE rpa.region_id = #{regionId}
    </select>
</mapper>
